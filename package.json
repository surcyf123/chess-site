{
  "name": "chess-site",
  "version": "0.1.0",
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "chess.js": "^0.12.1",
    "dotenv": "^16.3.1",
    "next": "^13.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "server:ts": "ts-node src/server.ts",
