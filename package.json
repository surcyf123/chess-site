    "concurrently": "^8.0.1",
    "postcss": "^8.4.23",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
